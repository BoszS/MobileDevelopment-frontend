<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.thomasmore.ezsports">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconez"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconez"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PlayersActivity"
            android:label="@string/title_activity_players"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ChoiceActivity"
            android:label="@string/title_activity_choice"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MatchesActivity"
            android:label="@string/title_activity_matches"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GamesActivity"
            android:label="@string/title_activity_games"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LeaguesActivity"
            android:label="@string/title_activity_leagues"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TeamDetailActivity"
            android:label="@string/title_activity_teamDetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TeamsActivity"
            android:label="@string/title_activity_teams"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashscreenActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>